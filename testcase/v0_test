# shellcheck shell=sh disable=SC3043



test_tldr() {

    xrc tldr
    x log init tldr
    # . ./testcase/v0_test_base

    echo "test 7z:"
    tldr testcase/7z.md
    echo "test 7z-zh:"
    tldr testcase/7z-zh.md
    echo "test ag-ko:"
    tldr testcase/ag-ko.md
    echo "test java:"
    tldr testcase/java.md
    echo "test ldapsearch:"
    tldr testcase/ldapsearch.md
}

cross_shell_test() {

    for i in debian alpine centos; do
        tldr_log info "Testing : " "$i"
        docker run -it -v  ~/.x-cmd/:/root/.x-cmd/ -v "$(pwd)":/pd "${i}" sh -c " . ~/.x-cmd/xrc/latest && cd pd && . ./testcase/v0_test"
    done
}


test_tldr
